# TreeTalk Environment Configuration Example
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=treetalk_secure_password_change_me
DATABASE_URL=postgresql+asyncpg://postgres:treetalk_secure_password_change_me@localhost:5432/treetalk

# Security
TREETALK_SECRET_KEY=your-secret-key-for-encryption-change-this-in-production

# OpenRouter API (Optional - can be configured through UI)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# External URLs (for production deployment)
FRONTEND_URL=http://localhost:8501
BACKEND_URL=http://localhost:8000

# File Upload Limits
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=.ged

# Chat Settings
DEFAULT_MODEL=openai/gpt-3.5-turbo
MAX_CHAT_HISTORY=50
CHAT_TIMEOUT_SECONDS=30